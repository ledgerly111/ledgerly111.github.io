    <script type="text/javascript">
        // This script block contains the main application logic.
        // It is NOT a module, so it can be accessed by global functions from the module script.

        // Configure Big.js for exact decimal math
        Big.DP = 2; // 2 decimal places for display
        Big.RM = 1; // ROUND_HALF_UP

        // GCC Countries Configuration
        const GCC_COUNTRIES = {
            'AE': { name: 'United Arab Emirates', currency: 'AED', symbol: 'Ø¯.Ø¥', rate: new Big(3.67), tax: new Big(0.05), taxName: 'VAT' },
            'SA': { name: 'Saudi Arabia', currency: 'SAR', symbol: 'ï·¼', rate: new Big(3.75), tax: new Big(0.15), taxName: 'VAT' },
            'KW': { name: 'Kuwait', currency: 'KWD', symbol: 'Ø¯.Ùƒ', rate: new Big(0.31), tax: new Big(0.00), taxName: 'No Tax' },
            'QA': { name: 'Qatar', currency: 'QAR', symbol: 'ï·¼', rate: new Big(3.64), tax: new Big(0.00), taxName: 'No Tax' },
            'BH': { name: 'Bahrain', currency: 'BHD', symbol: '.Ø¯.Ø¨', rate: new Big(0.38), tax: new Big(0.10), taxName: 'VAT' },
            'OM': { name: 'Oman', currency: 'OMR', symbol: 'ï·¼', rate: new Big(0.38), tax: new Big(0.05), taxName: 'VAT' }
        };

        // --- UTILITY CLASSES ---

        class NotificationSystem {
            static show(message, type = 'info', duration = 4000) {
                const container = document.getElementById('notification-container');
                if (!container) return;
                const notification = document.createElement('div');
                notification.className = `notification ${type}`;
                
                const icons = { success: 'fas fa-check-circle', error: 'fas fa-exclamation-circle', warning: 'fas fa-exclamation-triangle', info: 'fas fa-info-circle' };
                const colors = { success: 'text-green-400', error: 'text-red-400', warning: 'text-yellow-400', info: 'text-blue-400' };
                
                notification.innerHTML = `
                    <i class="${icons[type]} ${colors[type]} text-lg"></i>
                    <div class="flex-1"><p class="text-white font-medium text-sm">${message}</p></div>
                    <button onclick="this.parentElement.remove()" class="text-gray-400 hover:text-white transition-colors ml-2"><i class="fas fa-times"></i></button>
                `;
                
                container.appendChild(notification);
                setTimeout(() => notification.remove(), duration);
            }
            
            static success(message) { this.show(message, 'success'); }
            static error(message) { this.show(message, 'error'); }
            static warning(message) { this.show(message, 'warning'); }
            static info(message) { this.show(message, 'info'); }
        }

        class MoneyUtils {
            // Store all money as cents (integers) to avoid floating point issues
            static toCents(dollarAmount) {
                if (dollarAmount === null || dollarAmount === undefined || dollarAmount === '') return 0;
                return new Big(dollarAmount).times(100).round(0).toNumber();
            }

            static fromCents(centsAmount) {
                if (centsAmount === null || centsAmount === undefined) return new Big(0);
                return new Big(centsAmount || 0).div(100);
            }
        }

        // --- AI & BOT LOGIC --- (Largely unchanged, but integrated with new data structure)
        const AccuraAI = {
            analyzeSentiment(text) {
                const positiveWords = ['great', 'excellent', 'good', 'amazing', 'wonderful', 'fantastic', 'awesome', 'love', 'perfect', 'happy', 'success'];
                const negativeWords = ['bad', 'terrible', 'awful', 'horrible', 'hate', 'problem', 'issue', 'urgent', 'emergency', 'complaint'];
                const lowerText = text.toLowerCase();
                let score = 0;
                positiveWords.forEach(word => { if (lowerText.includes(word)) score++; });
                negativeWords.forEach(word => { if (lowerText.includes(word)) score--; });
                if (score > 0) return 'positive';
                if (score < 0) return 'negative';
                return 'neutral';
            },

            generateBusinessInsights(salesData, products, customers, expenses) {
                const insights = [];
                const totalRevenue = salesData.reduce((sum, sale) => sum + (sale.totalCents || 0), 0);
                const totalExpenses = expenses.reduce((sum, expense) => sum + (expense.amountCents || 0), 0);
                const netProfit = totalRevenue - totalExpenses;

                if (netProfit > MoneyUtils.toCents(10000)) {
                    insights.push({ type: 'success', icon: 'ðŸŽ‰', title: 'Excellent Performance!', message: `Outstanding net profit! Your business is thriving.`, action: 'Consider expansion or strategic investments.' });
                } else if (netProfit < 0) {
                    insights.push({ type: 'warning', icon: 'âš ï¸', title: 'Profit Alert', message: `Expenses are exceeding revenue. Immediate attention required.`, action: 'Review your expense structure and pricing strategy.' });
                }

                const lowStockProducts = products.filter(p => p.stock <= (p.reorderLevel || 10));
                if (lowStockProducts.length > 0) {
                    insights.push({ type: 'alert', icon: 'ðŸ“¦', title: 'Inventory Warning', message: `${lowStockProducts.length} products need restocking.`, action: 'Prevent stockouts by reordering now.' });
                }
                
                if (customers.length > 50) {
                    insights.push({ type: 'info', icon: 'ðŸ‘¥', title: 'Growing Customer Base', message: `You have ${customers.length} customers in your database.`, action: 'Implement loyalty programs to maximize retention.' });
                }
                return insights;
            }
        };

        const AccuraBot = {
            analyzeApp(state) {
                return {
                    overview: this.getAppOverview(state),
                    alerts: this.getAlerts(state),
                    quickActions: this.getQuickActions(state)
                };
            },
            getAppOverview(state) {
                const totalRevenue = state.sales.reduce((sum, sale) => sum + (sale.totalCents || 0), 0);
                const totalExpenses = state.expenses.reduce((sum, expense) => sum + (expense.amountCents || 0), 0);
                const lowStockCount = state.products.filter(p => p.stock <= (state.settings.lowStockThreshold || 10)).length;
                return {
                    revenue: totalRevenue,
                    expenses: totalExpenses,
                    netProfit: totalRevenue - totalExpenses,
                    products: state.products.length,
                    customers: state.customers.length,
                    employees: state.users.length,
                    lowStock: lowStockCount,
                    healthScore: this.calculateHealthScore(state)
                };
            },
            calculateHealthScore(state) {
                let score = 0;
                const revenue = state.sales.reduce((sum, s) => sum + (s.totalCents || 0), 0);
                const expenses = state.expenses.reduce((sum, e) => sum + (e.amountCents || 0), 0);
                const netProfit = revenue - expenses;
                if (netProfit > MoneyUtils.toCents(50000)) score += 30; else if (netProfit > 0) score += 15; else score += 5;
                const lowStockRatio = state.products.length > 0 ? state.products.filter(p => p.stock <= (state.settings.lowStockThreshold || 10)).length / state.products.length : 0;
                if (lowStockRatio === 0) score += 25; else if (lowStockRatio < 0.1) score += 20; else score += 10;
                if (state.customers.length > 50) score += 20; else if (state.customers.length > 10) score += 10; else score += 5;
                if (state.sales.length > 10) score += 25; else score += 10;
                return Math.min(score, 100);
            },
            getAlerts(state) {
                const alerts = [];
                const lowStockProducts = state.products.filter(p => p.stock <= (state.settings.lowStockThreshold || 10));
                if (lowStockProducts.length > 0) {
                    alerts.push({ type: 'urgent', icon: 'ðŸš¨', title: 'Critical Stock Alert', message: `${lowStockProducts.length} products critically low`, action: 'products' });
                }
                const unreadMessages = state.messages.filter(m => m.to === state.currentUser.id && !m.read);
                if (unreadMessages.length > 5) {
                    alerts.push({ type: 'info', icon: 'ðŸ“§', title: 'Unread Messages', message: `${unreadMessages.length} unread messages require attention`, action: 'inbox' });
                }
                return alerts;
            },
            getQuickActions(state) {
                const actions = [];
                if (state.currentUser.role === 'admin') {
                    actions.push({ id: 'add-employee', icon: 'fas fa-user-plus', label: 'Add Employee', color: 'blue' });
                }
                if (['admin', 'manager'].includes(state.currentUser.role)) {
                    actions.push({ id: 'add-product', icon: 'fas fa-box', label: 'Add Product', color: 'green' });
                }
                actions.push(
                    { id: 'add-sale', icon: 'fas fa-shopping-cart', label: 'Record Sale', color: 'green' },
                    { id: 'add-expense', icon: 'fas fa-receipt', label: 'Add Expense', color: 'yellow' },
                    { id: 'add-customer', icon: 'fas fa-handshake', label: 'Add Customer', color: 'blue' }
                );
                return actions;
            }
        };

        // --- MAIN APPLICATION ---
        window.app = {
            db: window.db,
            auth: window.auth,
            appId: window.appId,
            charts: {},
            state: {
                isAuthReady: false,
                isLoading: true,
                firebaseUser: null,
                currentUser: null, // This will be the user profile from our 'users' collection
                currentView: 'login',
                mobileMenuOpen: false,
                aiMode: 'ai',
                // Data collections will be populated by Firestore
                users: [],
                products: [],
                customers: [],
                sales: [],
                expenses: [],
                invoices: [],
                messages: [],
                // Default settings, will be loaded from Firestore
                settings: {
                    companyName: 'Your Company',
                    selectedCountry: 'AE',
                    lowStockThreshold: 10,
                    categories: ['Electronics', 'Accessories', 'Software', 'Services', 'Other'],
                    expenseCategories: ['Office Supplies', 'Marketing', 'Utilities', 'Rent', 'Salaries', 'Other'],
                },
                aiInsights: [],
                botAnalysis: {},
            },
            listeners: [], // To store Firestore onSnapshot listeners and unsubscribe on logout

            // --- INITIALIZATION & AUTH ---
            init() {
                this.render(); // Initial render of loading screen or login
            },

            handleAuthChange(firebaseUser) {
                if (firebaseUser) {
                    this.state.firebaseUser = firebaseUser;
                    this.state.isAuthReady = true;
                    // Don't switch view yet, wait for user role selection
                    if (this.state.currentView === 'login') {
                        this.render(); // Re-render login screen now that auth is ready
                    }
                } else {
                    // This case handles logout
                    this.state.isAuthReady = false;
                    this.state.firebaseUser = null;
                    this.state.currentUser = null;
                    this.state.currentView = 'login';
                    // Unsubscribe from all Firestore listeners
                    this.listeners.forEach(unsubscribe => unsubscribe());
                    this.listeners = [];
                    this.render();
                }
            },

            async selectUserRole(role) {
                if (!this.state.isAuthReady) {
                    NotificationSystem.error("Authentication not ready. Please wait.");
                    return;
                }
                this.state.isLoading = true;
                this.render();

                const userDocRef = doc(this.db, `apps/${this.appId}/users`, role);
                let userDoc = await getDoc(userDocRef);

                // If user document doesn't exist, create it with default data
                if (!userDoc.exists()) {
                    NotificationSystem.info(`Creating default profile for ${role}...`);
                    const defaultUsers = {
                        admin: { id: 'admin', username: 'admin', role: 'admin', name: 'Administrator', email: 'admin@company.com', phone: '+971501234567', hireDate: '2023-01-01', salaryCents: 7500000, commissionCents: 0 },
                        manager: { id: 'manager', username: 'manager', role: 'manager', name: 'John Manager', email: 'manager@company.com', phone: '+971501234568', hireDate: '2023-02-01', salaryCents: 6000000, commissionCents: 0 },
                        worker: { id: 'worker', username: 'worker', role: 'worker', name: 'Jane Worker', email: 'worker@company.com', phone: '+971501234569', hireDate: '2023-03-01', salaryCents: 4500000, commissionCents: 25000 }
                    };
                    await setDoc(userDocRef, defaultUsers[role]);
                    userDoc = await getDoc(userDocRef);
                }
                
                this.state.currentUser = userDoc.data();
                await this.loadInitialData(); // Load all data from Firestore
                
                this.state.isLoading = false;
                this.setView('dashboard');
                NotificationSystem.success(`Welcome, ${this.state.currentUser.name}!`);
            },

            // --- DATA HANDLING (FIRESTORE) ---
            async loadInitialData() {
                this.state.isLoading = true;
                this.render();

                // Unsubscribe from any old listeners
                this.listeners.forEach(unsubscribe => unsubscribe());
                this.listeners = [];

                const collectionsToLoad = ['products', 'customers', 'sales', 'expenses', 'invoices', 'messages', 'users'];
                
                const settingsDocRef = doc(this.db, `apps/${this.appId}/settings`, 'main');
                const settingsDoc = await getDoc(settingsDocRef);
                if (settingsDoc.exists()) {
                    this.state.settings = { ...this.state.settings, ...settingsDoc.data() };
                } else {
                    // If no settings exist, save the default ones
                    await setDoc(settingsDocRef, this.state.settings);
                }

                const promises = collectionsToLoad.map(collectionName => {
                    return new Promise((resolve, reject) => {
                        const q = query(collection(this.db, `apps/${this.appId}/${collectionName}`));
                        const unsubscribe = onSnapshot(q, (querySnapshot) => {
                            const data = [];
                            querySnapshot.forEach((doc) => {
                                data.push({ id: doc.id, ...doc.data() });
                            });
                            this.state[collectionName] = data;
                            this.updateAIAndBot();
                            this.render(); // Re-render on each data update
                            resolve();
                        }, (error) => {
                            console.error(`Error loading ${collectionName}:`, error);
                            NotificationSystem.error(`Failed to load ${collectionName}.`);
                            reject(error);
                        });
                        this.listeners.push(unsubscribe); // Store the listener
                    });
                });

                try {
                    await Promise.all(promises);
                } catch (error) {
                    console.error("Error loading initial data:", error);
                } finally {
                    this.state.isLoading = false;
                    this.render();
                }
            },

            async saveData(collectionName, data) {
                try {
                    const docRef = doc(this.db, `apps/${this.appId}/${collectionName}`, data.id);
                    await setDoc(docRef, data, { merge: true });
                    return true;
                } catch (error) {
                    console.error('Firestore save failed:', error);
                    NotificationSystem.error('Failed to save data.');
                    return false;
                }
            },

            async deleteData(collectionName, id) {
                try {
                    await deleteDoc(doc(this.db, `apps/${this.appId}/${collectionName}`, id));
                    return true;
                } catch (error) {
                    console.error('Firestore delete failed:', error);
                    NotificationSystem.error('Failed to delete data.');
                    return false;
                }
            },

            logout() {
                NotificationSystem.info('Logging out...');
                this.auth.signOut(); // This will trigger the onAuthStateChanged listener
            },

            // --- UI & VIEW MANAGEMENT ---
            setView(view) {
                this.state.currentView = view;
                this.render();
                if (window.innerWidth < 1024 && this.state.mobileMenuOpen) {
                    this.toggleMobileSidebar();
                }
            },

            render() {
                const container = document.getElementById('app-container');
                if (!container) {
                    console.error("App container not found!");
                    return;
                }

                if (this.state.isLoading) {
                    container.innerHTML = this.getLoadingView();
                    return;
                }

                if (!this.state.currentUser) {
                    container.innerHTML = this.getLoginView();
                    return;
                }
                
                const views = {
                    'dashboard': this.getDashboardView(),
                    'products': this.getProductsView(),
                    'customers': this.getCustomersView(),
                    'sales': this.getSalesView(),
                    'expenses': this.getExpensesView(),
                    'employees': this.getEmployeesView(),
                    'invoices': this.getInvoicesView(),
                    'reports': this.getReportsView(),
                    'settings': this.getSettingsView(),
                    'inbox': this.getInboxView(),
                    'ai-assistant': this.getAIAssistantView()
                };

                container.innerHTML = `
                    ${this.getNavbar()}
                    ${this.getSidebar()}
                    <div class="main-content">
                        ${views[this.state.currentView] || this.getDashboardView()}
                    </div>
                `;

                // Re-initialize charts if on a view that needs them
                if (['dashboard', 'reports'].includes(this.state.currentView)) {
                    setTimeout(() => this.createDashboardCharts(), 100);
                }

                this.bindEvents(); // Re-bind events after every render
            },

            bindEvents() {
                // Use event delegation on the container to avoid re-binding on every little change
                const container = document.getElementById('app-container');
                if (!container) return;

                // Remove old listener to prevent duplicates
                if (this.eventListener) {
                    container.removeEventListener('click', this.eventListener);
                }

                this.eventListener = (e) => {
                    const actionElement = e.target.closest('[data-action]');
                    if (actionElement) {
                        const action = actionElement.dataset.action;
                        const id = actionElement.dataset.id;
                        this.handleAction(action, id, e);
                    }
                };
                
                container.addEventListener('click', this.eventListener);

                // Handle form submissions
                container.querySelectorAll('form').forEach(form => {
                    form.addEventListener('submit', e => {
                        e.preventDefault();
                        this.handleFormSubmit(e.target.id, e.target);
                    });
                });
            },

            handleAction(action, id, event) {
                const actions = {
                    'login-admin': () => this.selectUserRole('admin'),
                    'login-manager': () => this.selectUserRole('manager'),
                    'login-worker': () => this.selectUserRole('worker'),
                    'logout': () => this.logout(),
                    'toggle-mobile-menu': () => this.toggleMobileSidebar(),
                    'dashboard': () => this.setView('dashboard'),
                    'products': () => this.setView('products'),
                    'customers': () => this.setView('customers'),
                    'sales': () => this.setView('sales'),
                    'expenses': () => this.setView('expenses'),
                    'employees': () => this.setView('employees'),
                    'invoices': () => this.setView('invoices'),
                    'reports': () => this.setView('reports'),
                    'settings': () => this.setView('settings'),
                    'inbox': () => this.setView('inbox'),
                    'ai-assistant': () => this.setView('ai-assistant'),
                    'toggle-ai-mode': () => this.toggleAIMode(),
                    'add-product': () => this.showModal('add-product'),
                    'edit-product': () => this.showModal('edit-product', id),
                    'delete-product': () => this.deleteWithConfirmation('products', id, 'product'),
                    'add-customer': () => this.showModal('add-customer'),
                    'edit-customer': () => this.showModal('edit-customer', id),
                    'delete-customer': () => this.deleteWithConfirmation('customers', id, 'customer'),
                    'add-sale': () => this.showModal('add-sale'),
                    'add-expense': () => this.showModal('add-expense'),
                    'edit-expense': () => this.showModal('edit-expense', id),
                    'delete-expense': () => this.deleteWithConfirmation('expenses', id, 'expense'),
                    'add-employee': () => this.showModal('add-employee'),
                    'edit-employee': () => this.showModal('edit-employee', id),
                    'delete-employee': () => this.deleteWithConfirmation('users', id, 'employee'),
                    'generate-invoice': () => this.generateInvoice(id),
                    'download-invoice': () => this.downloadInvoice(id),
                    'close-modal': () => this.closeModal(),
                    'export-data': () => this.exportData(),
                    'compose-message': () => this.showModal('compose-message'),
                    'mark-read': () => this.markMessageRead(id),
                    'refresh-ai': () => { this.updateAIAndBot(); NotificationSystem.info("AI Insights refreshed."); },
                    'quick-sale': () => this.showQuickSale(),
                };

                if (actions[action]) {
                    actions[action]();
                }
            },

            // --- CORE FEATURE LOGIC ---

            updateAIAndBot() {
                if (!this.state.currentUser) return;
                this.state.aiInsights = AccuraAI.generateBusinessInsights(this.state.sales, this.state.products, this.state.customers, this.state.expenses);
                this.state.botAnalysis = AccuraBot.analyzeApp(this.state);
                // No need to save, this is derived data.
            },
            
            toggleAIMode() {
                this.state.aiMode = this.state.aiMode === 'ai' ? 'bot' : 'ai';
                this.render();
                NotificationSystem.success(`Switched to Accura${this.state.aiMode === 'ai' ? 'AI' : 'Bot'} mode`);
            },
            
            async changeCountry(countryCode) {
                if (['admin', 'manager'].includes(this.state.currentUser.role)) {
                    this.state.settings.selectedCountry = countryCode;
                    await this.saveData('settings', { id: 'main', ...this.state.settings });
                    this.render();
                    NotificationSystem.success(`Currency changed to ${GCC_COUNTRIES[countryCode].currency}`);
                }
            },
            
            formatCurrency(amountCents, showSymbol = true) {
                const countryInfo = GCC_COUNTRIES[this.state.settings.selectedCountry];
                if (!countryInfo) return `${MoneyUtils.fromCents(amountCents).toFixed(2)} USD`;
                
                const localValue = MoneyUtils.fromCents(amountCents).times(countryInfo.rate);
                
                if (showSymbol) {
                    return `${countryInfo.symbol} ${localValue.toFixed(2)}`;
                }
                return `${localValue.toFixed(2)} ${countryInfo.currency}`;
            },

            getTaxInfo() {
                const countryInfo = GCC_COUNTRIES[this.state.settings.selectedCountry];
                return {
                    rate: countryInfo.tax,
                    name: countryInfo.taxName,
                    amount: (amountCents) => new Big(amountCents).times(countryInfo.tax).round(0).toNumber()
                };
            },

            async handleFormSubmit(formId, form) {
                const formData = new FormData(form);
                const data = Object.fromEntries(formData.entries());

                const handlers = {
                    'product-form': () => this.handleProductForm(data),
                    'customer-form': () => this.handleCustomerForm(data),
                    'sale-form': () => this.handleSaleForm(data),
                    'expense-form': () => this.handleExpenseForm(data),
                    'employee-form': () => this.handleEmployeeForm(data),
                    'message-form': () => this.handleMessageForm(data),
                    'company-settings-form': () => this.handleCompanySettingsForm(data)
                };

                if (handlers[formId]) {
                    await handlers[formId]();
                    this.closeModal();
                }
            },

            async handleProductForm(data) {
                const isEdit = document.getElementById('product-id').value;
                const product = {
                    id: isEdit || crypto.randomUUID(),
                    name: data.name,
                    priceCents: MoneyUtils.toCents(data.price),
                    costCents: MoneyUtils.toCents(data.cost),
                    stock: parseInt(data.stock),
                    category: data.category,
                    description: data.description,
                    sku: data.sku,
                    supplier: data.supplier,
                    reorderLevel: parseInt(data.reorderLevel)
                };
                await this.saveData('products', product);
                NotificationSystem.success(`Product ${isEdit ? 'updated' : 'added'}!`);
            },
            
            async handleCustomerForm(data) {
                const isEdit = document.getElementById('customer-id').value;
                const customer = {
                    id: isEdit || crypto.randomUUID(),
                    name: data.name, type: data.type, email: data.email, phone: data.phone,
                    address: data.address, taxId: data.taxId || '',
                    creditLimitCents: MoneyUtils.toCents(data.creditLimit || '0'),
                    balanceCents: isEdit ? this.state.customers.find(c => c.id === isEdit)?.balanceCents || 0 : 0
                };
                await this.saveData('customers', customer);
                NotificationSystem.success(`Customer ${isEdit ? 'updated' : 'added'}!`);
            },

            async handleSaleForm(data, cart, totalInfo) {
                // This function is now more generic to be used by both regular and quick sale
                const saleId = crypto.randomUUID();
                const sale = {
                    id: saleId,
                    customerId: data.customerId,
                    items: cart,
                    subtotalCents: totalInfo.subtotal,
                    discountCents: totalInfo.discount,
                    taxAmountCents: totalInfo.tax,
                    totalCents: totalInfo.total,
                    date: data.date || new Date().toISOString().split('T')[0],
                    salesPersonId: this.state.currentUser.id,
                    saleType: data.saleType,
                    country: this.state.settings.selectedCountry,
                    currency: GCC_COUNTRIES[this.state.settings.selectedCountry].currency,
                    createdAt: serverTimestamp()
                };

                // Use a Firestore transaction to ensure atomicity
                try {
                    await runTransaction(this.db, async (transaction) => {
                        // 1. Update product stock
                        for (const item of cart) {
                            const productRef = doc(this.db, `apps/${this.appId}/products`, item.productId);
                            const productDoc = await transaction.get(productRef);
                            if (!productDoc.exists()) throw `Product with ID ${item.productId} not found!`;
                            const newStock = productDoc.data().stock - item.quantity;
                            if (newStock < 0) throw `Not enough stock for ${productDoc.data().name}.`;
                            transaction.update(productRef, { stock: newStock });
                        }

                        // 2. Update customer balance for credit sales
                        if (sale.saleType === 'Credit' && sale.customerId) {
                            const customerRef = doc(this.db, `apps/${this.appId}/customers`, sale.customerId);
                            const customerDoc = await transaction.get(customerRef);
                            if (!customerDoc.exists()) throw "Customer not found!";
                            const newBalance = (customerDoc.data().balanceCents || 0) + sale.totalCents;
                            transaction.update(customerRef, { balanceCents: newBalance });
                        }

                        // 3. Calculate and update user commission
                        const profit = cart.reduce((sum, item) => {
                            const product = this.state.products.find(p => p.id === item.productId);
                            if (product && product.costCents !== undefined) {
                                const itemProfit = (item.unitPriceCents - product.costCents) * item.quantity;
                                return sum + itemProfit;
                            }
                            return sum;
                        }, 0);
                        const commissionCents = Math.round(profit * 0.10); // 10% commission on profit

                        if (commissionCents > 0) {
                            const userRef = doc(this.db, `apps/${this.appId}/users`, this.state.currentUser.id);
                            const userDoc = await transaction.get(userRef);
                            if (!userDoc.exists()) throw "Salesperson not found!";
                            const newCommission = (userDoc.data().commissionCents || 0) + commissionCents;
                            transaction.update(userRef, { commissionCents: newCommission });
                        }

                        // 4. Save the sale document
                        const saleRef = doc(this.db, `apps/${this.appId}/sales`, saleId);
                        transaction.set(saleRef, sale);
                    });

                    NotificationSystem.success(`Sale recorded! Total: ${this.formatCurrency(sale.totalCents)}`);
                } catch (e) {
                    console.error("Sale Transaction Failed: ", e);
                    NotificationSystem.error(`Sale failed: ${e.toString()}`);
                }
            },

            async handleExpenseForm(data) {
                const isEdit = document.getElementById('expense-id').value;
                const expense = {
                    id: isEdit || crypto.randomUUID(),
                    description: data.description,
                    amountCents: MoneyUtils.toCents(data.amount),
                    category: data.category,
                    date: data.date,
                    addedBy: this.state.currentUser.id,
                    notes: data.notes || ''
                };
                await this.saveData('expenses', expense);
                NotificationSystem.success(`Expense ${isEdit ? 'updated' : 'recorded'}!`);
            },
            
            async handleEmployeeForm(data) {
                const isEdit = document.getElementById('employee-id').value;
                const employee = {
                    id: isEdit || data.username.toLowerCase(), // Use username as ID for new employees
                    name: data.name, username: data.username, role: data.role, email: data.email,
                    phone: data.phone, address: data.address, hireDate: data.hireDate,
                    salaryCents: MoneyUtils.toCents(data.salary),
                    commissionCents: isEdit ? this.state.users.find(u => u.id === isEdit)?.commissionCents || 0 : 0
                };
                await this.saveData('users', employee);
                NotificationSystem.success(`Employee ${isEdit ? 'updated' : 'added'}!`);
            },

            async handleMessageForm(data) {
                const message = {
                    id: crypto.randomUUID(),
                    from: this.state.currentUser.id, to: data.recipient, subject: data.subject, content: data.content,
                    timestamp: serverTimestamp(), read: false,
                    sentiment: AccuraAI.analyzeSentiment(data.content)
                };
                await this.saveData('messages', message);
                NotificationSystem.success('Message sent!');
            },

            async handleCompanySettingsForm(data) {
                const newSettings = {
                    companyName: data.companyName,
                    lowStockThreshold: parseInt(data.lowStockThreshold),
                    selectedCountry: data.selectedCountry,
                    // Keep existing categories if not provided in form
                    categories: this.state.settings.categories,
                    expenseCategories: this.state.settings.expenseCategories
                };
                this.state.settings = { ...this.state.settings, ...newSettings };
                await this.saveData('settings', { id: 'main', ...this.state.settings });
                NotificationSystem.success('Company settings updated!');
            },

            // --- DELETION & MODALS ---
            deleteWithConfirmation(collectionName, id, itemName) {
                this.showConfirmationModal(`Are you sure you want to delete this ${itemName}? This action cannot be undone.`, async () => {
                    await this.deleteData(collectionName, id);
                    NotificationSystem.success(`ðŸ—‘ï¸ ${itemName.charAt(0).toUpperCase() + itemName.slice(1)} deleted successfully!`);
                    // The onSnapshot listener will automatically update the UI.
                });
            },

            showConfirmationModal(message, onConfirm) {
                this.closeModal(); // Close any existing modals first

                const modalHTML = `
                    <div class="modal-overlay" id="confirmation-modal-overlay">
                        <div class="modal-content">
                            <h3 class="text-xl font-bold text-white mb-4">Confirmation Required</h3>
                            <p class="text-gray-300 mb-6">${message}</p>
                            <div class="flex justify-end space-x-4">
                                <button id="confirm-cancel-btn" class="bg-gray-600 hover:bg-gray-700 text-white px-6 py-2 rounded-lg font-medium transition-colors">Cancel</button>
                                <button id="confirm-action-btn" class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg font-medium transition-colors">Confirm</button>
                            </div>
                        </div>
                    </div>
                `;
                document.body.insertAdjacentHTML('beforeend', modalHTML);

                const confirmBtn = document.getElementById('confirm-action-btn');
                const cancelBtn = document.getElementById('confirm-cancel-btn');
                const overlay = document.getElementById('confirmation-modal-overlay');

                const closeModal = () => overlay.remove();
                confirmBtn.onclick = () => { onConfirm(); closeModal(); };
                cancelBtn.onclick = closeModal;
                overlay.onclick = (e) => { if (e.target === overlay) closeModal(); };
            },

            showModal(type, id = null) {
                const modalContainer = document.createElement('div');
                modalContainer.innerHTML = this.getModalHTML(type, id);
                document.body.appendChild(modalContainer);

                const form = modalContainer.querySelector('form');
                if (form) {
                    form.addEventListener('submit', e => {
                        e.preventDefault();
                        this.handleFormSubmit(form.id, form);
                    });
                }
                
                if (id && type.includes('edit')) {
                    this.prefillEditForm(type, id);
                }

                // Special handling for sale modal
                if (type === 'add-sale') {
                    this.currentSaleCart = [];
                    // Bind events specific to the sale modal
                    document.getElementById('add-to-cart-btn').addEventListener('click', () => this.addToSaleCart());
                }
            },
            
            closeModal() {
                const modal = document.querySelector('.modal-overlay, .quick-sale-modal');
                if (modal) modal.parentElement.remove();
            },
            
            prefillEditForm(type, id) {
                let item;
                if (type === 'edit-product') item = this.state.products.find(p => p.id === id);
                else if (type === 'edit-customer') item = this.state.customers.find(c => c.id === id);
                else if (type === 'edit-employee') item = this.state.users.find(u => u.id === id);
                else if (type === 'edit-expense') item = this.state.expenses.find(e => e.id === id);

                if (item) {
                    // Use a small timeout to ensure the form elements are in the DOM
                    setTimeout(() => {
                        Object.keys(item).forEach(key => {
                            const input = document.getElementById(key);
                            if (input) {
                                let value = item[key];
                                // Convert cents back to dollars for amount fields
                                if (key.toLowerCase().includes('cents')) {
                                    value = MoneyUtils.fromCents(value).toFixed(2);
                                    const dollarKey = key.replace('Cents', '');
                                    const dollarInput = document.getElementById(dollarKey);
                                    if(dollarInput) dollarInput.value = value;
                                } else {
                                    input.value = value;
                                }
                            }
                        });
                        const idField = document.getElementById(`${type.split('-')[1]}-id`);
                        if (idField) idField.value = id;
                    }, 100);
                }
            },

            // --- QUICK SALE FEATURE ---
            showQuickSale() {
                this.quickSaleState = {
                    currentStep: 1,
                    selectedCustomerId: null,
                    cart: [], // { productId, name, quantity, unitPriceCents, stock }
                };
                
                const modalContainer = document.createElement('div');
                modalContainer.innerHTML = this.getQuickSaleModal();
                document.body.appendChild(modalContainer);
                this.renderQuickSaleStep();
            },

            renderQuickSaleStep() {
                const body = document.getElementById('quick-sale-body');
                const progressContainer = document.getElementById('quick-sale-progress');
                const footer = document.getElementById('quick-sale-footer');
                
                if (!body || !progressContainer || !footer) return;

                // Update progress bar
                progressContainer.innerHTML = this.getQuickSaleProgressHTML();
                
                // Render step content
                if (this.quickSaleState.currentStep === 1) {
                    body.innerHTML = this.getQuickSaleStep1HTML();
                    footer.innerHTML = this.getQuickSaleFooterHTML();
                } else if (this.quickSaleState.currentStep === 2) {
                    body.innerHTML = this.getQuickSaleStep2HTML();
                    footer.innerHTML = this.getQuickSaleFooterHTML();
                } else if (this.quickSaleState.currentStep === 3) {
                    body.innerHTML = this.getQuickSaleStep3HTML();
                    footer.innerHTML = this.getQuickSaleFooterHTML();
                } else if (this.quickSaleState.currentStep === 4) {
                    body.innerHTML = this.getQuickSaleStep4HTML();
                    footer.innerHTML = this.getQuickSaleFooterHTML();
                }
                
                // Re-bind events for the current step
                this.bindQuickSaleEvents();
            },

            bindQuickSaleEvents() {
                // Step 1: Customer selection
                document.querySelectorAll('[data-select-customer]').forEach(card => {
                    card.addEventListener('click', (e) => {
                        this.quickSaleState.selectedCustomerId = e.currentTarget.dataset.selectCustomer;
                        this.quickSaleState.currentStep = 2;
                        this.renderQuickSaleStep();
                    });
                });

                // Step 2: Product selection
                document.querySelectorAll('[data-select-product]').forEach(card => {
                    card.addEventListener('click', (e) => {
                        const productId = e.currentTarget.dataset.selectProduct;
                        const product = this.state.products.find(p => p.id === productId);
                        if (product && !this.quickSaleState.cart.some(item => item.productId === productId)) {
                            this.quickSaleState.cart.push({
                                productId: product.id,
                                name: product.name,
                                quantity: 1, // Default to 1
                                unitPriceCents: product.priceCents,
                                stock: product.stock
                            });
                            e.currentTarget.classList.add('selected');
                        }
                    });
                });

                // Step 3: Quantity sliders
                document.querySelectorAll('.quantity-slider').forEach(slider => {
                    slider.addEventListener('input', (e) => {
                        const productId = e.currentTarget.dataset.productId;
                        const newQuantity = parseInt(e.currentTarget.value);
                        const output = document.getElementById(`quantity-output-${productId}`);
                        const cartItem = this.quickSaleState.cart.find(item => item.productId === productId);
                        if (cartItem) {
                            cartItem.quantity = newQuantity;
                            if(output) output.textContent = newQuantity;
                            this.updateQuickSaleTotal();
                        }
                    });
                });

                // Step 4: Finalize form
                const finalizeForm = document.getElementById('quick-sale-finalize-form');
                if (finalizeForm) {
                    finalizeForm.addEventListener('submit', async (e) => {
                        e.preventDefault();
                        const formData = new FormData(e.target);
                        const data = Object.fromEntries(formData.entries());
                        const totalInfo = this.calculateQuickSaleTotal(data.discount);
                        
                        const saleData = {
                            customerId: this.quickSaleState.selectedCustomerId,
                            saleType: data.saleType,
                            date: new Date().toISOString().split('T')[0]
                        };

                        await this.handleSaleForm(saleData, this.quickSaleState.cart, totalInfo);
                        this.closeModal();
                    });
                }

                // Footer buttons
                const nextBtn = document.getElementById('qs-next-btn');
                const prevBtn = document.getElementById('qs-prev-btn');
                if (nextBtn) {
                    nextBtn.addEventListener('click', () => {
                        if (this.quickSaleState.currentStep === 2 && this.quickSaleState.cart.length === 0) {
                            NotificationSystem.warning("Please select at least one product.");
                            return;
                        }
                        this.quickSaleState.currentStep++;
                        this.renderQuickSaleStep();
                    });
                }
                if (prevBtn) {
                    prevBtn.addEventListener('click', () => {
                        this.quickSaleState.currentStep--;
                        this.renderQuickSaleStep();
                    });
                }
            },
            
            calculateQuickSaleTotal(discountDollars = '0') {
                const subtotal = this.quickSaleState.cart.reduce((sum, item) => sum + (item.unitPriceCents * item.quantity), 0);
                const discountCents = MoneyUtils.toCents(discountDollars);
                const subtotalAfterDiscount = subtotal - discountCents;
                const taxInfo = this.getTaxInfo();
                const taxAmountCents = taxInfo.amount(subtotalAfterDiscount);
                const total = subtotalAfterDiscount + taxAmountCents;
                
                return {
                    subtotal: subtotal,
                    discount: discountCents,
                    tax: taxAmountCents,
                    total: total
                };
            },

            updateQuickSaleTotal() {
                const totalContainer = document.getElementById('quick-sale-total-value');
                if (totalContainer) {
                    const totalInfo = this.calculateQuickSaleTotal();
                    totalContainer.textContent = this.formatCurrency(totalInfo.total);
                }
            },
            
            // --- VIEW & MODAL HTML GENERATORS ---
