                return `
                    <div class="min-h-screen flex items-center justify-center">
                        <div class="text-center">
                            <i class="fas fa-spinner fa-spin text-5xl text-accent-primary"></i>
                            <p class="text-white mt-4 text-lg">Loading Ledgerly...</p>
                        </div>
                    </div>
                `;
            },

