            getNavbar() {
                const unreadCount = this.state.messages.filter(m => m.to === this.state.currentUser.id && !m.read).length;
                const aiButtonClass = this.state.aiMode === 'ai' ? 'ai-button ai-pulse' : 'bot-button bot-pulse';
                const aiIcon = this.state.aiMode === 'ai' ? 'fas fa-brain' : 'fas fa-robot';
                
                return `
                    <div class="navbar">
                        <div class="flex justify-between items-center">
                            <div class="flex items-center space-x-4">
                                <div class="burger-menu" data-action="toggle-mobile-menu"><i class="fas fa-bars text-white text-lg"></i></div>
                                <div class="hidden md:flex items-center space-x-3">
                                    <div class="w-10 h-10 rounded-full bg-gradient-to-r from-purple-500 to-pink-500 flex items-center justify-center">
                                        <span class="text-white font-bold text-sm">${this.state.currentUser.name.charAt(0)}</span>
                                    </div>
                                    <div>
                                        <p class="text-white font-medium text-sm">${this.state.currentUser.name}</p>
                                        <p class="text-xs text-gray-400 capitalize">${this.state.currentUser.role}</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="flex items-center space-x-2">
                                <button data-action="quick-sale" class="quick-sale-button quick-sale-pulse" title="Quick Sale">
                                    <i class="fas fa-bolt-lightning text-lg"></i>
                                </button>
                                <button data-action="ai-assistant" class="${aiButtonClass}" title="${this.state.aiMode === 'ai' ? 'AccuraAI' : 'AccuraBot'}">
                                    <i class="${aiIcon} text-lg"></i>
                                </button>
                                
                                <div class="relative">
                                    <button data-action="inbox" class="text-gray-400 hover:text-teal-400 p-3 rounded-lg hover:bg-gray-700/50">
                                        <i class="fas fa-envelope text-lg"></i>
                                        ${unreadCount > 0 ? `<span class="absolute top-0 right-0 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">${unreadCount}</span>` : ''}
