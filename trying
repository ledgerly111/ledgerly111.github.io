<tr>
<th class="px-6 py-4 text-left">Customer</th>
<th class="px-6 py-4 text-left">Total</th>
<th class="px-6 py-4 text-left">Date</th>
<th class="px-6 py-4 text-left">Actions</th>
</tr>
</thead>
<tbody>
${this.state.sales.map(sale => {
const customer = this.state.customers.find(c => c.id === sale.customerId);
return `
<tr>
<td class="px-6 py-4">${customer ? customer.name : 'Unknown'}</td>
<td class="px-6 py-4 text-white font-medium">${this.formatCurrency(sale.total)}</td>
<td class="px-6 py-4">${new Date(sale.date).toLocaleDateString()}</td>
<td class="px-6 py-4">
<button data-action="generate-invoice" data-id="${sale.id}" class="text-blue-400 hover:text-blue-300">
<i class="fas fa-file-invoice"></i>
</button>
</td>
</tr>
`;
}).join('')}
</tbody>
</table>
</div>
</div>
</div>
`;
},

// Modal Methods
getModal(type, id = null) {
const modals = {
'add-product': this.getProductModal(),
'add-sale': this.getSaleModal(),
'add-customer': this.getCustomerModal(),
'add-expense': this.getExpenseModal()
};
return modals[type] || '';
},

