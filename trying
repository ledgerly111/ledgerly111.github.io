<script>
console.warn = function(msg) {
if (msg.includes('cdn.tailwindcss.com')) return;
console.log('Warning:', msg);
};

// FIXED: Precision Math Library for Financial Calculations
class PrecisionMath {
static round(value, decimals = 2) {
return Math.round((value + Number.EPSILON) * Math.pow(10, decimals)) / Math.pow(10, decimals);
}

static add(a, b) {
return this.round((a * 100 + b * 100) / 100);
}

static subtract(a, b) {
return this.round((a * 100 - b * 100) / 100);
}

static multiply(a, b) {
return this.round((a * 10000 * b) / 10000);
}

static divide(a, b) {
if (b === 0) return 0;
return this.round(a / b);
}

static percentage(value, percent) {
return this.round(this.multiply(value, this.divide(percent, 100)));
}
}

// GCC Countries Configuration
const GCC_COUNTRIES = {
'AE': { name: 'United Arab Emirates', currency: 'AED', symbol: 'ÿØ.ÿ•', rate: 3.67, tax: 0.05, taxName: 'VAT' },
