<form id="product-form" class="space-y-4">
<input type="hidden" id="product-id" value="">
<input type="text" id="name" name="name" placeholder="Product Name" class="form-input w-full" required>
<input type="number" id="price" name="price" placeholder="Price" step="0.01" class="form-input w-full" required>
<input type="number" id="cost" name="cost" placeholder="Cost" step="0.01" class="form-input w-full" required>
<input type="number" id="stock" name="stock" placeholder="Stock" class="form-input w-full" required>
<input type="text" id="sku" name="sku" placeholder="SKU" class="form-input w-full" required>
