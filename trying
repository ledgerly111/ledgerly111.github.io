'KW': { name: 'Kuwait', currency: 'KWD', symbol: 'ÿØ.ŸÉ', rate: 0.30, tax: 0.00, taxName: 'No Tax' },
'QA': { name: 'Qatar', currency: 'QAR', symbol: 'Ô∑º', rate: 3.64, tax: 0.00, taxName: 'No Tax' },
