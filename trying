// Cart handling for sales
app.addCartRow = function() {
const cartItems = document.getElementById('cart-items');
if (!cartItems) return;

const row = document.createElement('div');
row.className = 'grid grid-cols-12 gap-2 mb-2';
row.innerHTML = `
<div class="col-span-5">
<select class="form-input w-full text-sm" onchange="app.updateProductPrice(this)" required>
<option value="">Select Product</option>
${this.state.products.map(product => `
<option value="${product.id}"" data-price="${product.price}">${product.name} (Stock: ${product.stock})</option>
`).join('')}
</select>
</div>
<div class="col-span-2">
<input type="number" class="form-input w-full text-sm" min="1" value="1" onchange="app.updateSaleTotal()" required>
</div>
<div class="col-span-2">
<input type="number" class="form-input w-full text-sm" step="0.01" min="0" onchange="app.updateSaleTotal()" required>
</div>
<div class="col-span-2">
<input type="text" class="form-input w-full text-sm bg-gray-700" readonly>
</div>
<div class="col-span-1">
<button type="button" onclick="this.parentElement.parentElement.remove(); app.updateSaleTotal()" class="text-red-400 hover:text-red-300 p-1">
<i class="fas fa-trash text-sm"></i>
</button>
</div>
`;
cartItems.appendChild(row);
this.updateSaleTotal();
};

app.updateProductPrice = function(select) {
const price = select.options[select.selectedIndex]?.dataset.price || 0;
const priceInput = select.parentElement.nextElementSibling.nextElementSibling.querySelector('input');
if (priceInput) {
priceInput.value = price;
this.updateSaleTotal();
}
};

// FIXED: Sale total calculation with proper precision
app.updateSaleTotal = function() {
const cartRows = document.querySelectorAll('#cart-items > div');
let subtotal = 0;

// Update cart for form submission
this.currentSaleCart = [];

cartRows.forEach(row => {
const productSelect = row.children[0].querySelector('select');
const quantityInput = row.children[1].querySelector('input');
const priceInput = row.children[2].querySelector('input');
const totalInput = row.children[3].querySelector('input');

const productId = parseInt(productSelect.value);
const quantity = parseFloat(quantityInput.value) || 0;
const price = parseFloat(priceInput.value) || 0;

if (productId && quantity > 0 && price > 0) {
const lineTotal = PrecisionMath.multiply(quantity, price);
totalInput.value = this.formatCurrency(lineTotal, false);
subtotal = PrecisionMath.add(subtotal, lineTotal);

this.currentSaleCart.push({
productId: productId,
quantity: quantity,
unitPrice: price
});
}
});

const discountInput = document.querySelector('input[name="discount"]');
const discount = parseFloat(discountInput?.value) || 0;
const discountedSubtotal = PrecisionMath.subtract(subtotal, discount);
const taxInfo = this.getTaxInfo();
const taxAmount = PrecisionMath.multiply(discountedSubtotal, taxInfo.rate);
const total = PrecisionMath.add(discountedSubtotal, taxAmount);

const summaryElement = document.getElementById('sale-summary');
if (summaryElement) {
summaryElement.innerHTML = `
<div class="text-gray-400 mb-1">Subtotal: <span class="text-white">${this.formatCurrency(subtotal)}</span></div>
${discount > 0 ? `<div class="text-gray-400 mb-1">Discount: <span class="text-red-400">-${this.formatCurrency(discount)}</span></div>` : ''}
<div class="text-gray-400 mb-1">${taxInfo.name} (${PrecisionMath.round(PrecisionMath.multiply(taxInfo.rate, 100), 0)}%): <span class="text-white">${this.formatCurrency(taxAmount)}</span></div>
<div class="text-lg font-bold text-green-400 pt-2 border-t border-gray-600">Total: ${this.formatCurrency(total)}</div>
`;
}
};

// Initialize application
document.addEventListener('DOMContentLoaded', () => {
app.init();
});

// Global assignments for inline handlers
window.app = app;
window.PrecisionMath = PrecisionMath;
</script>
</body>
</html>

