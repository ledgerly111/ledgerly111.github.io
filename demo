    // FIXED: Moved currency selector here from the navbar.
	getSettingsView() {
		if (!this.canViewReports()) {
			return '<div class="text-center text-gray-400 py-12">You do not have permission to view this page.</div>';
		}

		return `
        <div class="space-y-6 fade-in">
            <div>
                <h2 class="text-3xl font-bold text-white mb-2">Settings</h2>
                <p class="text-gray-400">Configure your business preferences</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <div class="perplexity-card p-6">
                    <h3 class="text-xl font-bold text-white mb-6">Company Settings</h3>
                    <form id="company-settings-form" class="space-y-4">
                        <div>
                            <label class="block text-gray-400 text-sm font-medium mb-2">Company Name</label>
                            <input type="text" name="companyName" value="${this.state.companyName}" class="form-input w-full" required>
                        </div>
                        <div>
                            <label class="block text-gray-400 text-sm font-medium mb-2">Low Stock Threshold</label>
                            <input type="number" name="lowStockThreshold" value="${this.state.lowStockThreshold}" class="form-input w-full" min="1" required>
                        </div>
                        <div class="flex justify-end pt-2">
                            <button type="submit" class="perplexity-button">
                                <i class="fas fa-save mr-2"></i>Save Settings
                            </button>
                        </div>
                    </form>
                </div>
                
                <div class="perplexity-card p-6">
                    <h3 class="text-xl font-bold text-white mb-6">Regional Settings</h3>
                    <div class="space-y-4">
                        <div>
                            <label class="block text-gray-400 text-sm font-medium mb-2">Active Currency (GCC)</label>
                            <select data-action="change-country" class="form-input w-full">
                                ${Object.entries(GCC_COUNTRIES).map(([code, country]) => `
                                <option value="${code}" ${this.state.selectedCountry === code ? 'selected' : ''}>${country.name} (${country.currency})</option>
                                `).join('')}
                            </select>
                        </div>
                        <div class="p-4 border border-gray-700 rounded-lg bg-gray-800/30">
                            <p class="text-gray-400 text-sm">Changing the currency here will update financial displays across the entire application and will be used for new transactions.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="perplexity-card p-6">
                <h3 class="text-xl font-bold text-white mb-6">Data Management</h3>
                <div class="flex items-center justify-between p-4 border border-gray-700 rounded-lg">
                    <div>
                        <h4 class="font-medium text-white">Export Business Data</h4>
                        <p class="text-gray-400 text-sm">Download all your business data as a JSON file.</p>
                    </div>
                    <button data-action="export-data" class="perplexity-button">
                        <i class="fas fa-download mr-2"></i>Export
                    </button>
                </div>
            </div>
        </div>
        `;
	},
    
