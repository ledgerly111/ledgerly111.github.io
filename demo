    // FIXED: Removed the currency selector from the navbar.
	getNavbar() {
		const unreadCount = this.getUnreadMessageCount();
		const aiButtonClass = this.state.aiMode === 'ai' ? 'ai-button ai-pulse' : 'bot-button bot-pulse';
		const aiIcon = this.state.aiMode === 'ai' ? 'fas fa-brain' : 'fas fa-robot';
		const aiText = this.state.aiMode === 'ai' ? 'AccuraAI' : 'AccuraBot';
		
		return `
        <nav class="navbar">
            <div class="flex justify-between items-center">
                <div class="flex items-center space-x-4">
                    <div class="burger-menu" data-action="toggle-mobile-menu">
                        <i class="fas fa-bars text-white text-lg"></i>
                    </div>
                    <div class="flex items-center space-x-3">
                        <div class="flex items-center">
                            <div class="w-10 h-10 rounded-full bg-gradient-to-r from-teal-500 to-blue-500 flex items-center justify-center mr-3">
                                <i class="fas fa-chart-line text-white text-lg"></i>
                            </div>
                            <div class="hidden sm:block">
                                <h1 class="text-xl font-bold gradient-text leading-tight">${this.state.companyName}</h1>
                                <p class="text-xs text-gray-400 leading-none">Sales</p>
                            </div>
                        </div>
                    </div>
                    <div class="hidden md:flex items-center space-x-4">
                        <span class="text-gray-500">|</span>
                        <div class="flex items-center space-x-3">
                            <div class="w-8 h-8 rounded-full bg-gradient-to-r from-purple-500 to-pink-500 flex items-center justify-center">
                                <span class="text-white font-bold text-sm">${this.state.currentUser.name.charAt(0)}</span>
                            </div>
                            <div class="text-sm">
                                <p class="text-white font-medium">${this.state.currentUser.name}</p>
                                <p class="text-gray-400 text-xs capitalize">${this.state.currentUser.role}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <button data-action="inbox" class="relative p-2 text-gray-400 hover:text-white transition-colors">
                        <i class="fas fa-envelope text-lg"></i>
                        ${unreadCount > 0 ? `<span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">${unreadCount > 9 ? '9+' : unreadCount}</span>` : ''}
                    </button>
                    <button data-action="toggle-ai-mode" class="${aiButtonClass} px-4 py-2 rounded-lg text-sm">
                        <i class="${aiIcon} mr-2"></i>${aiText}
                    </button>
                    <button data-action="logout" class="p-2 text-gray-400 hover:text-red-400 transition-colors">
                        <i class="fas fa-sign-out-alt text-lg"></i>
                    </button>
                </div>
            </div>
        </nav>
        `;
	},

    // FIXED: Added "Purchases" to the sidebar menu.
	getSidebar() {
		const menuItems = [
			{ icon: 'fas fa-tachometer-alt', label: 'Dashboard', action: 'dashboard' },
			{ icon: 'fas fa-box', label: 'Products', action: 'products' },
            { icon: 'fas fa-dolly', label: 'Purchases', action: 'purchases' }, // New menu item
			{ icon: 'fas fa-users', label: 'Customers', action: 'customers' },
			{ icon: 'fas fa-shopping-cart', label: 'Sales', action: 'sales' },
			{ icon: 'fas fa-receipt', label: 'Expenses', action: 'expenses' },
			...(this.canManageEmployees() ? [{ icon: 'fas fa-user-tie', label: 'Employees', action: 'employees' }] : []),
			{ icon: 'fas fa-file-invoice', label: 'Invoices', action: 'invoices' },
			...(this.canViewReports() ? [{ icon: 'fas fa-chart-bar', label: 'Reports', action: 'reports' }] : []),
			{ icon: 'fas fa-envelope', label: 'Inbox', action: 'inbox', badge: this.getUnreadMessageCount() },
			{ icon: 'fas fa-brain', label: `Accura${this.state.aiMode === 'ai' ? 'AI' : 'Bot'}`, action: 'ai-assistant' },
			...(this.canViewReports() ? [{ icon: 'fas fa-cog', label: 'Settings', action: 'settings' }] : [])
		];

		const sidebarContent = `
        <div class="p-6">
            <div class="flex items-center space-x-3 mb-8">
                <div class="w-12 h-12 rounded-full bg-gradient-to-r from-teal-500 to-blue-500 flex items-center justify-center">
                    <i class="fas fa-chart-line text-white text-xl"></i>
                </div>
                <div>
                    <h2 class="text-xl font-bold gradient-text">Ledgerly</h2>
                    <p class="text-gray-400 text-sm">Sales Management</p>
                </div>
            </div>
            <nav class="space-y-2">
                ${menuItems.map(item => `
                <button data-action="${item.action}" class="menu-item ${this.state.currentView === item.action ? 'active' : ''}">
                    <i class="${item.icon}"></i>
                    <span class="flex-1">${item.label}</span>
                    ${item.badge ? `<span class="bg-red-500 text-white text-xs rounded-full px-2 py-1 ml-2">${item.badge}</span>` : ''}
                </button>
                `).join('')}
            </nav>
        </div>
        `;

		return `
        <aside id="mobile-sidebar" class="mobile-sidebar">
            ${sidebarContent}
        </aside>

        <aside class="desktop-sidebar">
            ${sidebarContent}
        </aside>
        `;
	},
    
    // ... (The other get...View() and get...Modal() functions will follow in the final block)
	getDashboardView() {
		const currentUser = this.state.currentUser;

		const totalRevenue = this.state.sales.reduce((sum, sale) => PrecisionMath.add(sum, sale.total), 0);
		const totalExpenses = this.state.expenses.reduce((sum, expense) => PrecisionMath.add(sum, expense.amount), 0);
		const netProfit = PrecisionMath.subtract(totalRevenue, totalExpenses);
		const totalProducts = this.state.products.length;
		const totalCustomers = this.state.customers.length;
		const totalSales = this.state.sales.length;
		const monthlyEarnings = PrecisionMath.divide(currentUser.salary, 12);
		const totalEarnings = PrecisionMath.add(monthlyEarnings, currentUser.commission || 0);

		const overview = this.state.botAnalysis.overview || {};
		const alerts = this.state.botAnalysis.alerts || [];
		const recommendations = this.state.botAnalysis.recommendations || [];
		const quickActions = this.state.botAnalysis.quickActions || [];

		return `
        <div class="space-y-6 fade-in">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                <div>
                    <h2 class="text-3xl font-bold text-white mb-2">
                        Welcome back, ${currentUser.name}! üëã
                    </h2>
                    <p class="text-gray-400">Here's your business overview for today</p>
                </div>
                <div class="flex items-center space-x-4">
                    <button data-action="${this.state.aiMode === 'ai' ? 'refresh-ai' : 'refresh-bot'}" class="${this.state.aiMode === 'ai' ? 'ai-button' : 'bot-button'} px-4 py-2 rounded-lg text-sm">
                        <i class="fas fa-sync-alt mr-2"></i>Refresh AI
                    </button>
                </div>
            </div>

            ${['worker', 'manager'].includes(currentUser.role) ? `
            <div class="perplexity-card p-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-xl font-bold text-white flex items-center">
                        <i class="fas fa-coins text-teal-400 mr-2"></i>
                        Live Earnings
                    </h3>
                    <div class="flex items-center space-x-2">
                        <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                        <span class="text-sm text-green-400 font-medium">LIVE</span>
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div class="text-center p-4 bg-gradient-to-r from-green-500/10 to-emerald-500/10 rounded-xl border border-green-500/20">
                        <div class="text-green-400 text-2xl mb-2">üí∞</div>
                        <p class="text-gray-400 text-sm mb-2">Monthly Salary</p>
                        <p class="text-lg font-bold text-green-400">${this.formatCurrency(monthlyEarnings)}</p>
                    </div>
                    <div class="text-center p-4 bg-gradient-to-r from-blue-500/10 to-cyan-500/10 rounded-xl border border-blue-500/20">
                        <div class="text-blue-400 text-2xl mb-2">üéØ</div>
                        <p class="text-gray-400 text-sm mb-2">Commission</p>
                        <p class="text-lg font-bold text-blue-400">${this.formatCurrency(currentUser.commission || 0)}</p>
                    </div>
                    <div class="text-center p-4 bg-gradient-to-r from-teal-500/10 to-blue-500/10 rounded-xl border border-teal-500/20">
                        <div class="text-teal-400 text-2xl mb-2">üèÜ</div>
                        <p class="text-gray-400 text-sm mb-2">Total Earnings</p>
                        <p class="text-xl font-bold text-teal-400">${this.formatCurrency(totalEarnings)}</p>
                    </div>
                </div>
            </div>
            ` : ''}

            <div class="grid grid-cols-2 lg:grid-cols-5 gap-4">
                <div class="perplexity-card p-4 hover:scale-105 transition-all duration-300">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm mb-1">Products</p>
                            <p class="text-2xl font-bold text-white">${totalProducts}</p>
                        </div>
                        <div class="w-10 h-10 bg-blue-500/20 rounded-xl flex items-center justify-center">
                            <i class="fas fa-box text-blue-400"></i>
                        </div>
                    </div>
                </div>
                <div class="perplexity-card p-4 hover:scale-105 transition-all duration-300">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm mb-1">Customers</p>
                            <p class="text-2xl font-bold text-white">${totalCustomers}</p>
                        </div>
                        <div class="w-10 h-10 bg-green-500/20 rounded-xl flex items-center justify-center">
                            <i class="fas fa-users text-green-400"></i>
                        </div>
                    </div>
                </div>
                <div class="perplexity-card p-4 hover:scale-105 transition-all duration-300">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm mb-1">Sales</p>
                            <p class="text-2xl font-bold text-white">${totalSales}</p>
                        </div>
                        <div class="w-10 h-10 bg-purple-500/20 rounded-xl flex items-center justify-center">
                            <i class="fas fa-shopping-cart text-purple-400"></i>
                        </div>
                    </div>
                </div>
                <div class="perplexity-card p-4 hover:scale-105 transition-all duration-300">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm mb-1">Revenue</p>
                            <p class="text-2xl font-bold text-white">${this.formatCurrency(totalRevenue)}</p>
                        </div>
                        <div class="w-10 h-10 bg-teal-500/20 rounded-xl flex items-center justify-center">
                            <i class="fas fa-dollar-sign text-teal-400"></i>
                        </div>
                    </div>
                </div>
                <div class="perplexity-card p-4 hover:scale-105 transition-all duration-300">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm mb-1">Net Profit</p>
                            <p class="text-2xl font-bold ${netProfit >= 0 ? 'text-green-400' : 'text-red-400'}">${this.formatCurrency(netProfit)}</p>
                        </div>
                        <div class="w-10 h-10 ${netProfit >= 0 ? 'bg-green-500/20' : 'bg-red-500/20'} rounded-xl flex items-center justify-center">
                            <i class="fas ${netProfit >= 0 ? 'fa-arrow-up text-green-400' : 'fa-arrow-down text-red-400'}"></i>
                        </div>
                    </div>
                </div>
            </div>

            ${this.state.aiMode === 'bot' && Object.keys(overview).length > 0 ? `
            <div class="bot-card p-6">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-white flex items-center">
                        <i class="fas fa-robot text-green-400 mr-3"></i>
                        AccuraBot Business Analysis
                    </h3>
                    <div class="flex items-center space-x-2">
                        <div class="text-sm font-medium px-3 py-1 rounded-full ${
                        overview.healthScore >= 80 ? 'bg-green-500/20 text-green-400' :
                        overview.healthScore >= 60 ? 'bg-yellow-500/20 text-yellow-400' :
                        'bg-red-500/20 text-red-400'
                        }">
                            Health Score: ${overview.healthScore}%
                        </div>
                    </div>
                </div>
                ${alerts.length > 0 ? `
                <div class="mb-6">
                    <h4 class="text-lg font-semibold text-white mb-3">üö® Active Alerts</h4>
                    <div class="grid gap-3">
                        ${alerts.map(alert => `
                        <div class="flex items-center p-3 bg-red-500/10 border border-red-500/20 rounded-lg">
                            <span class="text-2xl mr-3">${alert.icon}</span>
                            <div class="flex-1">
                                <p class="text-white font-medium">${alert.title}</p>
                                <p class="text-gray-400 text-sm">${alert.message}</p>
                            </div>
                            <button data-action="${alert.action}" class="text-red-400 hover:text-red-300">
                                <i class="fas fa-arrow-right"></i>
                            </button>
                        </div>
                        `).join('')}
                    </div>
                </div>
                ` : ''}
                ${quickActions.length > 0 ? `
                <div class="mb-6">
                    <h4 class="text-lg font-semibold text-white mb-3">‚ö° Quick Actions</h4>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                        ${quickActions.map(action => `
                        <button data-action="bot-quick-action" data-id="${action.id}" class="p-3 bg-gray-800/50 border border-gray-700 hover:border-gray-600 rounded-lg transition-all text-center">
                            <i class="${action.icon} text-${action.color}-400 text-xl mb-2"></i>
                            <p class="text-white text-sm font-medium">${action.label}</p>
                        </button>
                        `).join('')}
                    </div>
                </div>
                ` : ''}
                ${recommendations.length > 0 ? `
                <div>
                    <h4 class="text-lg font-semibold text-white mb-3">üí° AI Recommendations</h4>
                    <div class="space-y-3">
                        ${recommendations.map(rec => `
                        <div class="p-4 bg-blue-500/10 border border-blue-500/20 rounded-lg">
                            <div class="flex items-center mb-2">
                                <span class="text-xl mr-2">${rec.icon}</span>
                                <h5 class="text-white font-medium">${rec.title}</h5>
                            </div>
                            <p class="text-gray-300 text-sm mb-2">${rec.message}</p>
                            <p class="text-blue-400 text-sm">${rec.tip}</p>
                        </div>
                        `).join('')}
                    </div>
                </div>
                ` : ''}
            </div>
            ` : ''}

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <div class="perplexity-card p-6">
                    <h3 class="text-xl font-bold text-white mb-4 flex items-center">
                        <i class="fas fa-chart-line text-teal-400 mr-2"></i>
                        Sales Trend
                    </h3>
                    <div class="chart-container">
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>
                <div class="perplexity-card p-6">
                    <h3 class="text-xl font-bold text-white mb-4 flex items-center">
                        <i class="fas fa-chart-pie text-blue-400 mr-2"></i>
                        Financial Overview
                    </h3>
                    <div class="chart-container">
                        <canvas id="financeChart"></canvas>
                    </div>
                </div>
            </div>

            ${this.state.aiMode === 'ai' && this.state.aiInsights.length > 0 ? `
            <div class="ai-card p-6">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-white flex items-center">
                        <i class="fas fa-brain text-purple-400 mr-3"></i>
                        AccuraAI Business Insights
                    </h3>
                    <div class="text-sm text-purple-400">
                        Last updated: ${new Date(this.state.lastAIUpdate).toLocaleString()}
                    </div>
                </div>
                <div class="grid gap-4">
                    ${this.state.aiInsights.map(insight => `
                    <div class="p-4 bg-${insight.type === 'success' ? 'green' : insight.type === 'warning' ? 'yellow' : 'blue'}-500/10 border border-${insight.type === 'success' ? 'green' : insight.type === 'warning' ? 'yellow' : 'blue'}-500/20 rounded-lg">
                        <div class="flex items-center mb-2">
                            <span class="text-2xl mr-3">${insight.icon}</span>
                            <h4 class="text-white font-semibold">${insight.title}</h4>
                        </div>
                        <p class="text-gray-300 mb-2">${insight.message}</p>
                        <p class="text-${insight.type === 'success' ? 'green' : insight.type === 'warning' ? 'yellow' : 'blue'}-400 text-sm font-medium">${insight.action}</p>
                    </div>
                    `).join('')}
                </div>
            </div>
            ` : ''}
        </div>
        `;
	},

	getProductsView() {
		const lowStockProducts = this.state.products.filter(p => p.stock <= this.state.lowStockThreshold);

		return `
        <div class="space-y-6 fade-in">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                <div>
                    <h2 class="text-3xl font-bold text-white mb-2">Product Management</h2>
                    <p class="text-gray-400">Manage your inventory with AI-powered insights</p>
                </div>
                ${this.canManageProducts() ? `
                <button data-action="add-product" class="perplexity-button">
                    <i class="fas fa-plus mr-2"></i>Add Product
                </button>
                ` : ''}
            </div>

            ${lowStockProducts.length > 0 ? `
            <div class="bg-red-500/10 border border-red-500/20 rounded-lg p-4">
                <div class="flex items-center mb-2">
                    <i class="fas fa-exclamation-triangle text-red-400 mr-2"></i>
                    <h3 class="text-lg font-semibold text-red-400">Low Stock Alert</h3>
                </div>
                <p class="text-gray-300 mb-3">${lowStockProducts.length} products are running low on stock and need immediate attention.</p>
                <div class="flex flex-wrap gap-2">
                    ${lowStockProducts.map(product => `
                    <span class="px-3 py-1 bg-red-500/20 text-red-400 rounded-full text-sm">${product.name} (${product.stock} left)</span>
                    `).join('')}
                </div>
            </div>
            ` : ''}

            <div class="perplexity-card">
                <div class="p-6 border-b border-gray-700">
                    <h3 class="text-xl font-bold text-white">Product Inventory</h3>
                </div>
                <div class="responsive-table">
                    <table class="min-w-full">
                        <thead class="bg-gray-800/50">
                            <tr>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Product</th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Category</th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Price</th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Stock</th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Status</th>
                                ${this.canManageProducts() ? '<th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Actions</th>' : ''}
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-700">
                            ${this.state.products.map(product => `
                            <tr class="hover:bg-gray-800/30 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-500 rounded-lg flex items-center justify-center mr-3">
                                            <i class="fas fa-box text-white"></i>
                                        </div>
                                        <div>
                                            <div class="text-sm font-medium text-white">${product.name}</div>
                                            <div class="text-sm text-gray-400">SKU: ${product.sku}</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-300">${product.category}</td>
                                <td class="px-6 py-4 text-sm text-white font-medium">${this.formatCurrency(product.price)}</td>
                                <td class="px-6 py-4 text-sm ${product.stock <= this.state.lowStockThreshold ? 'text-red-400' : 'text-white'}">${product.stock}</td>
                                <td class="px-6 py-4">
                                    <span class="px-2 py-1 text-xs font-medium rounded-full ${
                                    product.stock <= this.state.lowStockThreshold 
                                    ? 'bg-red-500/20 text-red-400' 
                                    : product.stock <= product.reorderLevel 
                                    ? 'bg-yellow-500/20 text-yellow-400'
                                    : 'bg-green-500/20 text-green-400'
                                    }">
                                        ${product.stock <= this.state.lowStockThreshold ? 'Low Stock' : product.stock <= product.reorderLevel ? 'Reorder' : 'In Stock'}
                                    </span>
                                </td>
                                ${this.canManageProducts() ? `
                                <td class="px-6 py-4 text-sm">
                                    <div class="flex space-x-2">
                                        <button data-action="edit-product" data-id="${product.id}" class="text-blue-400 hover:text-blue-300">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button data-action="delete-product" data-id="${product.id}" class="text-red-400 hover:text-red-300">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                                ` : ''}
                            </tr>
                            `).join('')}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        `;
	},

    // NEW: View for displaying purchase records.
    getPurchaseOrdersView() {
        return `
        <div class="space-y-6 fade-in">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                <div>
                    <h2 class="text-3xl font-bold text-white mb-2">Purchase Records</h2>
                    <p class="text-gray-400">History of your inventory purchases</p>
                </div>
            </div>

            <div class="perplexity-card">
                <div class="p-6 border-b border-gray-700">
                    <h3 class="text-xl font-bold text-white">Purchase History</h3>
                </div>
                ${this.state.purchaseOrders.length > 0 ? `
                <div class="responsive-table">
                    <table class="min-w-full">
                        <thead class="bg-gray-800/50">
                            <tr>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">PO #</th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Product</th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Supplier</th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Quantity</th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Total Cost</th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Date</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-700">
                            ${this.state.purchaseOrders.map(po => `
                            <tr class="hover:bg-gray-800/30 transition-colors">
                                <td class="px-6 py-4 text-sm text-gray-400">${po.poNumber}</td>
                                <td class="px-6 py-4 text-sm font-medium text-white">${po.productName}</td>
                                <td class="px-6 py-4 text-sm text-gray-300">${po.supplier}</td>
                                <td class="px-6 py-4 text-sm text-white">${po.quantity}</td>
                                <td class="px-6 py-4 text-sm text-yellow-400 font-medium">${this.formatCurrency(po.totalCost)}</td>
                                <td class="px-6 py-4 text-sm text-gray-300">${new Date(po.date).toLocaleDateString()}</td>
                            </tr>
                            `).join('')}
                        </tbody>
                    </table>
                </div>
                ` : `
                <div class="p-12 text-center">
                    <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-file-invoice text-gray-600 text-2xl"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-400 mb-2">No purchase records yet</h3>
                    <p class="text-gray-500">When you add a new product to your inventory, a record will appear here.</p>
                </div>
                `}
            </div>
        </div>
        `;
    },

